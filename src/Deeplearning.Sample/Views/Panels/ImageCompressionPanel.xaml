<UserControl x:Class="Deeplearning.Sample.Views.Panels.ImageCompressionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deeplearning.Sample.Views.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
      
          <Image Width="300" Height="300" x:Name="srcImage" Source="{Binding SourceImage}"></Image>
       
          <Image  Width="300" Height="300" Grid.Column="1" x:Name="comImage" Source="{Binding CompressedImage}"></Image>

        <TextBox Width="120" Height="30" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="70" Text="{Binding EigenCount}"></TextBox>

        <Button Width="120" Height="30" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="30" Command="{Binding PCACompressCommand}">PCA压缩</Button>
    </Grid>
</UserControl>
